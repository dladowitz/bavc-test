  <!-- Image Background Page Header -->
  <!-- Note: The background image is set within the business-casual.css file. -->
  <header class="business-header">
    <div class="container">
      <div class="row">
        <div class="title col-sm-12">
          <h1 class="tagline">Catster</h1>
          <h2 class="subtitle">Making the world better by adding cats</h2>
        </div>
      </div>
    </div>
  </header>

  <!-- Page Content -->
  <div class="container">

    <hr>
  
    <div class="row new-cat">
      <div class="col-sm-12">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h1 class="panel-title">Get a new cat in your inbox daily</h3>
            </div>
            <div class="panel-body">
              <%= form_for @user, html: {class: "form-inline text-center"} do |f| %>
                <div class="form-group">
                  <%= f.text_field :email_address, class: "form-control input-lg", size: 50, placeholder: "david@catster.com" %>
                </div>  
                <%= f.submit "Signup", class: "btn btn-primary btn-lg signup-button" %>
              <% end %>


              <!-- <form class="form-inline text-center">
                <div class="form-group">
                  <input type="email" class="form-control input-lg" size="50" id="cat-url" placeholder="david@catster.com">
                </div>
                <button type="submit" class="btn btn-primary btn-lg signup-button">Signup</button>
              </form> -->
            </div>
          </div>
        </div>
      </div>

      <hr>

      <div class="row">
        <%- @cat_gifs.each do |cat_gif| %>
          <div class="col-sm-4" id=<%= cat_gif.id %>>
            <div class="cat-gif img-circle img-center" style="background-image:url(<%= cat_gif.url %>)"></div>
            <div class="vote">
              <span class="score">
                <%= cat_gif.score || 0 %>
              </span>
              <%= link_to"/cat_gifs/#{cat_gif.id}/upvote", class: "btn btn-default btn-lg up" do %>
                <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
                UpVote
              <% end %>
                
              <%= link_to "/cat_gifs/#{cat_gif.id}/downvote", class: "btn btn-default btn-lg down" do %>
                <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
                DownVote
              <% end %>
            </div>
          </div>
        <% end %>

        <div class="col-sm-4">
          <%= link_to "Add a Cat", new_cat_gif_path, class: "btn btn-success btn-lg right" %>
       </div>

     </div>
     <!-- /.row -->

     <hr>

     <div class="row">

      <div class="col-sm-4 col-sm-offset-8 text-right">
        <h2>Contact Us</h2>
        <address>
          <strong>Catster</strong>
          <br>401 6th Street
          <br>San Francisco, CA 94103
          <br>
        </address>
        <address>
          <abbr title="Phone">P:</abbr>(415) 646-0999
          <br>
          <abbr title="Email">E:</abbr> <a href="mailto:catdaddy@catster.com">catdaddy@catster.com</a>
        </address>
      </div>
    </div>
    <!-- /.row -->

    <!-- Footer -->
    <footer>
      <div class="row">
        <div class="col-lg-12 text-right">
          <p>Copyright &copy; Catster 2015</p>
        </div>
      </div>
      <!-- /.row -->
    </footer>
  </div>

  <br>


