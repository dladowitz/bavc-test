  <!-- Image Background Page Header -->
  <!-- Note: The background image is set within the business-casual.css file. -->
  <header class="business-header">
    <div class="container">
      <div class="row">
        <div class="title col-sm-12">
          <h1 class="tagline">Catster</h1>
          <h2 class="subtitle">Making the world better by adding cats</h2>
        </div>
      </div>
    </div>
  </header>

  <!-- Page Content -->
  <div class="container">

    <hr>
  
    <div class="row new-cat">
      <div class="col-sm-12">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h1 class="panel-title">Get a new cat in your inbox daily</h3>
            </div>
            <div class="panel-body">
              <form class="form-inline text-center">
                <div class="form-group">
                  <input type="email" class="form-control input-lg" size="50" id="cat-url" placeholder="david@catster.com">
                </div>
                <button type="submit" class="btn btn-primary btn-lg signup-button">Signup</button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <div class="row">
        <%- @cat_gifs.each do |cat_gif| %>
          <div class="col-sm-4">
            <div class="cat-gif img-circle img-center" style="background-image:url(<%= cat_gif.url %>)"></div>
            <div class="vote">
              <span class="score">0</span>
              <button type="button" class="btn btn-default btn-lg up">
                <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span> UpVote
              </button>
              <button type="button" class="btn btn-default btn-lg down1">
                <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span> DownVote
              </button>
            </div>
          </div>
        <% end %>

        <div class="col-sm-4">
          <button type="button" class="btn btn-primary btn-lg right">
           More Cats
           <span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
         </button>
       </div>

     </div>
     <!-- /.row -->



     <hr>

     <div class="row">

      <div class="col-sm-4 col-sm-offset-8 text-right">
        <h2>Contact Us</h2>
        <address>
          <strong>Catster</strong>
          <br>401 6th Street
          <br>San Francisco, CA 94103
          <br>
        </address>
        <address>
          <abbr title="Phone">P:</abbr>(415) 646-0999
          <br>
          <abbr title="Email">E:</abbr> <a href="mailto:catdaddy@catster.com">catdaddy@catster.com</a>
        </address>
      </div>
    </div>
    <!-- /.row -->

    <!-- Footer -->
    <footer>
      <div class="row">
        <div class="col-lg-12 text-right">
          <p>Copyright &copy; Catster 2015</p>
        </div>
      </div>
      <!-- /.row -->
    </footer>
  </div>


  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Url</th>
        <th>Score</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cat_gifs.each do |cat_gif| %>
      <tr>
        <td><%= cat_gif.title %></td>
        <td><%= cat_gif.url %></td>
        <td><%= cat_gif.score %></td>
        <td><%= link_to 'Show', cat_gif %></td>
        <td><%= link_to 'Edit', edit_cat_gif_path(cat_gif) %></td>
        <td><%= link_to 'Destroy', cat_gif, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Cat gif', new_cat_gif_path %>
